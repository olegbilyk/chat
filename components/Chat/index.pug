div.chat
  div.chat__container
    div.chat__header
      h3='Добро пожаловать' + user
    div.chat__body
      if !messages.length
        h3 Пока нет сообщений
      each message in messages
        div.message-box(class=message.isMine ? 'right-img' : 'left-img')
          div.picture
            img(src=message.avatar title='name of user')
            span.time=message.date.toTimeString().split(' ')[0]
          div.message
            span=message.name
            p=message.text